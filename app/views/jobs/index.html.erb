<h1>Jobs</h1>

<div class="row">
  <div class="col-md-8">
    <% @jobs.each do |job| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to job.name, job %>
          </h4>
          <small>
            <%= job.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @jobs %>
  </div>
  <div class="col-md-4">
    <% if policy(Job.new).create? %>
      <%= link_to "New Job", new_job_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>