<h1><%= markdown_to_html @brainstorm.title %></h1>

<div class="pull-right">
  <% if policy(@brainstorm).update? %>
    <%= link_to "Edit Brainstorm", edit_brainstorm_path, class: 'btn btn-success' %>
  <% end %>

  
  <% if policy(@brainstorm).destroy? %>
     <%= link_to "Delete Brainstorm", @brainstorm, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this brainstorm?' } %> 
   <% end %>
</div>

<div class="row">
  <div class="col-md-8">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
          <% if @brainstorm.category %>
            Category: <%= link_to @brainstorm.category.title, @brainstorm.category %><br />
          <% end %>
            <%= markdown_to_html @brainstorm.description %><br />
            </h5>
            <small>
              submitted by <%= link_to @brainstorm.user.name, @brainstorm.user %> <%= time_ago_in_words(@brainstorm.created_at) %> ago
            </small>
          </h4>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <h2>Comments</h2>
  <div class='col-md-12'>
    <div class='js-comments'>
      <%= render partial: 'comments/comment', collection: @comments %>
    </div>
    <div class='new-comment'>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
