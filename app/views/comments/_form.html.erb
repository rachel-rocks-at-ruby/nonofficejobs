<% if current_user %>
  <h4>Add a comment:</h4>
  <%= form_for [@category, @job, @post, @post.comments.build], remote: true do |f| %>
      <div class="form-group">
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Add a comment:" %>
      </div>
      <%= f.hidden_field :commentable_type %>
      <%= f.hidden_field :commentable_id %>
      <div class="form-group">
        <%= f.submit "Create Comment", class: 'btn btn-success' %>
      </div>
  <% end %>
<% end %>