<h1>New Category</h1>

<div class="row">
  <div class="col-md-4">
    <p>Only admin and moderators can add categories.</p>
  </div>
  <div class="col-md-8">
    <%= form_for @category do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter category" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>