<h1><%= markdown @post.title %></h1> 

<div class="row">
  <div class="col-md-8">
    <p><%= markdown @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_job_post_path(@job, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

</br>

<div class="row">
  <h2>Comments</h2>
  <div class='col-md-12'>
    <div class='js-comments'>
      <%= render partial: 'comments/comment', collection: @comments %>
    </div>
    <div class='new-comment'>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>