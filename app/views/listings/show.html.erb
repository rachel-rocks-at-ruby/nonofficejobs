<h1><%= @listing.title %></h1>
<h3>(<%= @listing.category.title %>)</h3>

<div class="pull-right">
  <%# if policy(@job).update? %>
    <%= link_to "Edit Listing", edit_listing_path, class: 'btn btn-success' %>
  <%# end %>

  
  <%# if policy(@category).destroy? %>
     <%= link_to "Delete Listing", @listing, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this listing?' } %> 
   <%# end %>
</div>

<div class="row">
  <div class="col-md-8">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p>Location: <%= @listing.location %></p>
            <p>Description: <%= @listing.description %></p>
            <p>Pay: <%= @listing.pay %></p>
            <p>Compensation detail: <%= @listing.compensation %></p>
            <p>Listed by: <%= @listing.user.name %></p>
            <p>Contact email: <%= mail_to @listing.user.email, @listing.user.email %></p>
          </h4>
        </div>
      </div>
  </div>

</div>