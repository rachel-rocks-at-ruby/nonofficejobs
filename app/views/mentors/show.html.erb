<h1><%= @mentor.job.name %></h1>

<div class="pull-right">
  <%# if policy(@job).update? %>
    <%#= link_to "Edit Listing", edit_listing_path, class: 'btn btn-success' %>
  <%# end %>

  
  <%# if policy(@category).destroy? %>
     <%#= link_to "Delete Listing", @listing, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this listing?' } %> 
   <%# end %>
</div>

<div class="row">
  <div class="col-md-8">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p>Description: <%= @mentor.description %></p>
            <p>Listed by: <%= link_to @mentor.user.name, @mentor.user %></p>
            <p>Contact email: <%= mail_to @mentor.user.email, @mentor.user.email %></p>
          </h4>
        </div>
      </div>
  </div>

</div>