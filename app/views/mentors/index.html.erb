<h1>Mentorship Offered</h1>

<div class="row">
  <div class="col-md-8">
    <% @mentors.each do |mentor| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to mentor.job.name, mentor %> by <%= link_to mentor.user.name, mentor.user %>
          </h4>
        </div>
      </div>
    <% end %>
    <%= will_paginate @mentors %>
  </div>

</div>