<!-- I want to make a partial to list the mentors available for each job. -->

<div class="row">
  <div class="col-md-8">
    <h3>Mentorships available for <%= @job.name %></h3>
    <% @mentors.each do |mentor| %>
      <% if mentor.job == @job %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <p><%= link_to mentor.user.name, mentor %></p>
            </h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>